<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="handler.exploration.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:handler.exploration"
    xmlns:page="clr-namespace:handler.exploration.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="handler.exploration">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
     Title="FooEntry"
     ContentTemplate="{DataTemplate page:FooEntryPage}"
     Route="FooEntyPage" />

    <ShellContent Title="ImageEntry"
                  ContentTemplate="{DataTemplate page:ImageEntryPage}"
                  Route="ImageEntryPage" />

</Shell>
