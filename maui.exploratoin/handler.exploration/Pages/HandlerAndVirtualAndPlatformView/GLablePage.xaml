<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:me="clr-namespace:handler.exploration.Interfaces"
             x:Class="handler.exploration.Pages.GLablePage"
             Title="GLablePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <me:GLabel Text="GLabel Demo" WidthRequest="100"
                   MouseEntered="GLabel_MouseEntered" MouseMoved="GLabel_MouseMoved" MouseExited="GLabel_MouseExited" BackgroundColor="LightBlue"/>

        <Label x:Name="label" />
    </VerticalStackLayout>
</ContentPage>